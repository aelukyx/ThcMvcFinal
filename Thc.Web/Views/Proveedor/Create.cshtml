@model Thc.Models.Models.Proveedor

@{
    ViewBag.Title = "Crear Proveedor";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    
	<div class="row clearfix">

		<div class="col-md-1 column">
		</div>
		<div class="col-md-11 column">


        <div class="panel panel-primary" style="width:85%">
                      <div class="panel-heading">
                        <b>Datos del Proveedor</b>
                      </div>
                        <div class="panel-body">

	                    <div class="row clearfix">
		                    <div class="col-md-5 column">

                                <div class="editor-label">
                                    @Html.Label("Número RUC")
                                </div>
                                <div class="editor-field">
                                    <div class="input-group">
                                      <div class="input-group-addon"><img src="~/Content/icons/ruc-icon.png" width="18px"/></div>
                                       @Html.TextBoxFor(model => model.NroRUC, new { maxlength = "11", size = "50px", style = "width:120px;" })
                                    </div>
                                   <p>
                                    @Html.ValidationMessageFor(model => model.NroRUC)
                                    </p>
                                </div>

                                <div class="editor-label">
                                    @Html.Label("Razón Social")
                                </div>
                                <div class="editor-field">
                                    <div class="input-group">
                                      <div class="input-group-addon"><img src="~/Content/icons/name-icon.png" width="18px"/></div>
                                       @Html.TextBoxFor(model => model.RazonSocial, new { style="width:257px"})
                                    </div>
                                   <p>
                                    @Html.ValidationMessageFor(model => model.RazonSocial)
                                    </p>
                                </div>

                                <div class="editor-label">
                                    @Html.Label("Dirección")
                                </div>
                                <div class="editor-field">
                                    <div class="input-group">
                                      <div class="input-group-addon"><img src="~/Content/icons/house-icon.png" width="18px"/></div>
                                       @Html.TextBoxFor(model => model.Direccion, new { style="width:257px"})
                                    </div>
                                   <p>
                                    @Html.ValidationMessageFor(model => model.Direccion)
                                    </p>
                                </div>

                                <div class="editor-label">
                                    @Html.Label("Teléfono")
                                </div>
                                <div class="editor-field">
                                    <div class="input-group">
                                      <div class="input-group-addon"><img src="~/Content/icons/phone-icon.png" width="18px"/></div>
                                       @Html.TextBoxFor(model => model.Telefono, new { style="width:257px"})
                                    </div>
                                   <p>
                                    @Html.ValidationMessageFor(model => model.Telefono)
                                    </p>
                                </div>

                            </div>
		                    <div class="col-md-1 column">
		                    </div>

		                    <div class="col-md-6 column">
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.Celular)
                                </div>
                                <div class="editor-field">
                                    <div class="input-group">
                                      <div class="input-group-addon"><img src="~/Content/icons/cellphone-icon.png" width="18px"/></div>
                                       @Html.TextBoxFor(model => model.Celular, new { style="width:257px"})
                                    </div>
                                   <p>
                                    @Html.ValidationMessageFor(model => model.Celular)
                                    </p>
                                </div>

                                <div class="editor-label">
                                    @Html.Label("E-mail")
                                </div>
                                <div class="editor-field">
                                    <div class="input-group">
                                      <div class="input-group-addon"><img src="~/Content/icons/email2-icon.png" width="18px"/></div>
                                       @Html.TextBoxFor(model => model.Email, new { style="width:257px"})
                                    </div>
                                    <p>
                                    @Html.ValidationMessageFor(model => model.Email, "Ingrese un E-mail Válido: ejemplo@ejemplo.com")
                                    </p>
                                </div>

                                <div class="editor-label">
                                    @Html.Label("Ciudad")
                                </div>
                                <div class="editor-field">
                                    <div class="input-group" style="width:89%">
                                      <div class="input-group-addon" style="width:0.009%"><img src="~/Content/icons/map-icon.png" width="18px"/></div>
                                        @Html.DropDownListFor(model => model.CiudadId, (SelectList)ViewBag.CiudadId, new {@class="selectpicker"})
                                    </div>
                                    <p>
                                    @Html.ValidationMessageFor(model => model.CiudadId)
                                    </p>
                                </div>

		                    </div>

                        </div>

                        </div>
                    </div>            


		</div>
	</div>
        
    <div class="row clearfix">
	    <div class="col-md-11 column" style="text-align:center">
            <p>
                <button type="submit" class="btn btn-success">GRABAR</button>&nbsp;&nbsp;
                <a href="@Url.Action("Index", "Proveedor")" class="btn btn-danger" style="margin: auto; color: #ffffff;">
                    CANCELAR
                </a>
            </p>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
